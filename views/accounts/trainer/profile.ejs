<!doctype html>
<html>
<head>
  <title>Fitness Market App</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body { word-wrap:break-word; }
  </style>
</head>
<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> Profile Page</h1>
      <a href="/trainer/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Trainer Profile</h3>
          <p>
            <strong>id</strong>: <%= trainer._id %><br>
            <strong>email</strong>: <%= trainer.local.email %><br>
            <strong>name</strong>: <%= trainer.local.name %><br>
            <strong>description</strong>: <%= trainer.local.description %><br>
            <strong>specialization</strong>: 
            <!-- For each loops that itterate and display each specialization of the trainer-->
              <% trainer.local.specialization.forEach(function(specializeIn){ %>
                <ul>
                  <%= specializeIn %>
                </ul>
              <%});%>
            <%if(trainer.local.gymInfo){%>
            <strong>Gym Registered to: </strong> <%= trainer.local.gymInfo.name %> <br>
            <a href="/gym/profile/<%= trainer.local.gymInfo.id %>" class="btn btn-primary btn-sm">View Gym Profile</a>
            <%}%>
            </p>
          </div>
        </div>

        <div class="row">

         <!-- FACEBOOK INFORMATION -->
         <div class="col-sm-6">
           <div class="well">
             <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
             <p>
               <strong>id</strong>: <%= trainer.facebook.id %><br>
               <strong>token</strong>: <%= trainer.facebook.token %><br>
               <strong>email</strong>: <%= trainer.facebook.email %><br>
               <strong>name</strong>: <%= trainer.facebook.name %>
             </p>

           </div>
         </div>
        </div>

        <hr>
        <a href="/gym" class="btn btn-primary">View List of Gym</a>

     </div>


   </div>
 </body>
 </html>