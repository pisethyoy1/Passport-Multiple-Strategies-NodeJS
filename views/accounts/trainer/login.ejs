<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Fitness Market App</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/font-awesome.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1>Login as Trainer</h1>
            <br>
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>
                <br>
                <!-- show any messages that come back with authentication -->
                <% if (facebookWarning.length > 0) { %>
                    <div class="alert alert-danger"><%= facebookWarning %></div>
                    <% } %>

                <!-- LOGIN FORM -->
                <form action="/trainer/login" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" required>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" required>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-warning btn-lg">Login</button>
                </form>
                <hr>

                <p>Need an account? <a href="/trainer/signup">Signup</a></p>
                <p><a href="/trainer/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook">   | </span> Login with Facebook</a> Or <a href="/gym/">View List of Gym</a>.</p>

            </div>

        </div>
    </body>
    </html>