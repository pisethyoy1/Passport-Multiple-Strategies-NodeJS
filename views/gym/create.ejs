<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Fitness Market App</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/font-awesome.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.js"></script>
</head>
<body>
    <div class="container-fluid" style="padding:0px;">
      <!-- THIS IS THE NAVIGATION BAR -->
       <%- include("../templates/navbar.ejs") %>
       <div class="container">
           <div class="col-sm-6 col-sm-offset-3">

               <h2>Register Your Gym</h2>

               <!-- WILL CONTAIN ERROR MESSAGE -->
               <% if (message.length > 0) { %>
                   <div class="alert alert-success"><%= message %></div>
                   <% } %>

                   <!-- CREATE NEW GYM FORM -->
                   <form action="/gym/create" method="post">
                       <!-- GYM Details -->
                       <Legend>Gym Details | Trainer Id: <%= session._id %></Legend>
                       <h3 class="text-right">Trainer's Name: <%= session.local.name %></h3>

                       <div class="form-group">
                           <label>Gym's Name</label>
                           <input type="text" class="form-control" name="name" required>
                       </div>

                       <div class="form-group">
                           <label>Gym's Description</label>
                           <textarea rows="5" class="form-control" name="description" required></textarea>
                       </div>

                       <div class="form-group">
                           <label>Location</label>
                           <input type="text" class="form-control" name="location" required>
                       </div>

                       <div class="form-group">
                           <label>Image</label>
                           <input type="text" class="form-control" name="image" required>
                       </div>

                       <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                       <button type="submit" class="btn btn-warning btn-lg">Register Gym</button>

                   </form>

                   <hr>

                   <p>Dont have an account? <a href="/trainer/signup">Sign up</a></p>
                   <p>go <a href="/">home</a>.</p>

               </div>

           </div>
       </div>

   </body>
   </html>