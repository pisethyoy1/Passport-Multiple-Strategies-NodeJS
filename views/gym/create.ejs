<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Fitness Market App</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:20px; }
    </style>
</head>
<body>
    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h2>Register Your Gym</h2>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-success"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/gym/create" method="post">
                    <!-- Account Details -->
                    <Legend>Gym Details | Trainer Id: <%= session._id %></Legend>
                    <h3 class="text-right">Trainer Name: <%= session.local.name %></h3>

                    <div class="form-group">
                        <label>Gym's Name</label>
                        <input type="text" class="form-control" name="name">
                    </div>

                    <div class="form-group">
                        <label>Gym's Description</label>
                        <input type="text" class="form-control" name="description">
                    </div>

                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" class="form-control" name="location">
                    </div>

                    <div class="form-group">
                        <label>Image</label>
                        <input type="text" class="form-control" name="image">
                    </div>

                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-warning btn-lg">Register Gym</button>

                </form>

                <hr>

                <p>Dont have an account? <a href="/trainer/signup">Sign up</a></p>
                <p>go <a href="/">home</a>.</p>

            </div>

        </div>
    </body>
    </html>